# Default server configuration
#
server {

	root /var/www/html;

	# Add index.php to the list if you are using PHP
	index index.html index.htm index.nginx-debian.html;

	server_name project02.dona.tf.uni-bielefeld.de www.project02.dona.tf.uni-bielefeld.de;

        location / {
                proxy_pass http://127.0.0.1:9004;
        }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/digital-footprint-war.dona.tf.uni-bielefeld.de/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/digital-footprint-war.dona.tf.uni-bielefeld.de/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot



}

server {
    if ($host = www.project02.dona.tf.uni-bielefeld.de) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = project02.dona.tf.uni-bielefeld.de) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    listen 80 ;
    listen [::]:80 ;
    server_name www.project02.dona.tf.uni-bielefeld.de project02.dona.tf.uni-bielefeld.de;
    return 404; # managed by Certbot

}
